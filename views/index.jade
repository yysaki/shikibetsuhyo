doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    title 値段識別表 - 不思議のダンジョン 風来のシレン4 神の眼と悪魔のヘソ
    meta(name='viewport' content='width=device-width, initialize-scale=1')
    link(rel='stylesheet', href='/css/bundle.css')
    script(src='/js/bundle.js', charset='UTF-8')

  body
    div(data-role="page")
      div(data-role="header")
        h1 風来のシレン4
      div(data-role="content")
        - each datum in data
          div(class="#{datum.type}")
            h1= datum.name
            table.table.table-striped
              - each item in datum.items
                tr
                  th= item.name
                  td= item.buy
                  td= item.sell
      div(data-role="footer")
        h4 Copy right 2015

    - each datum in data
      div(data-role="page" id="#{datum.type}")
        div(data-role="header")
          h1= datum.name
        div(data-role="content")
          ul(data-role="listview")
            - each item in datum.items
              li name: #{item.name} buy: #{item.buy} sell: #{item.sell}
        div(data-role="footer")
          h5 Copy right 2015
